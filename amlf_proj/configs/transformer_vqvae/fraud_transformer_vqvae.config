[Transformer_VQVAE]
input_dim = 30
hidden_dim = 32
recon_weight = 1.0
vq_commitment_cost = 0.25
num_embeddings = 512
embedding_dim = 64
d_model = 64
nhead = 8
encoder_layers = 2
encoder_ff_dim = 128
decoder_layers = 2
decoder_ff_dim = 128

[DataLoader]
dataset_name = stanpony/european_credit_card_fraud_dataset
exclude_cols = original_index, Class
normalize_cols = Time, Amount
batch_size = 8
shuffle = True
num_workers = 4
normalize = True
class_filter = 1

[Trainer]
num_epochs = 50
save_dir = saved_models/fraud/v1
validate_every = 1
save_best_only = True
early_stopping = True
patience = 15
lr = 0.001

[WandB]
use_wandb = False
project = fraud-vae
name = vqvae-fraud-training
entity = alexkstern
tags = fraud, vqvae
