[Transformer_VAE]
input_dim = 30
hidden_dim = 32
z_dim = 3
recon_weight = 1.0
kl_weight = 1.0
# Transformer-specific parameters
d_model = 64
nhead = 8
encoder_layers = 2
encoder_ff_dim = 128
decoder_layers = 2
decoder_ff_dim = 128

[DataLoader]
dataset_name = stanpony/european_credit_card_fraud_dataset
exclude_cols = original_index, Class
normalize_cols = Time, Amount
batch_size = 8
shuffle = True
num_workers = 4
normalize = True
class_filter = 1


[Trainer]
num_epochs = 50
patience = 15
lr=1e-3

[WandB]
use_wandb = True
project = fraud-classification
name = transformer-vae-fraud
entity = alexkstern
tags = fraud, transformer,vae
