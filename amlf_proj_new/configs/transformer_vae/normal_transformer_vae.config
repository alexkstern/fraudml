[Transformer_VAE]
input_dim = 30
hidden_dim = 32
z_dim = 3
recon_weight = 1.0
kl_weight = 1.0
# Transformer-specific parameters
d_model = 64
nhead = 4
encoder_layers = 3
encoder_ff_dim = 128
decoder_layers = 3
decoder_ff_dim = 128

[DataLoader]
dataset_name = stanpony/european_credit_card_fraud_dataset
exclude_cols = original_index, Class
normalize_cols = Time, Amount
batch_size = 32
shuffle = True
num_workers = 4
normalize = True
class_filter = 0
conv = True

[Trainer]
num_epochs = 100
patience = 15
lr = 1e-3
use_scheduler = True
scheduler_type = plateau
scheduler_patience = 5
scheduler_factor = 0.5
scheduler_min_lr = 1e-6

[WandB]
use_wandb = True
project = fraud-classification
name = transformer-vae-normal
entity = alexkstern
tags = normal, transformer, vae